  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AfonsoScheufele/AutoDevOps-AI-Pipeline/issues"
  },
  "homepage": "https://github.com/AfonsoScheufele/AutoDevOps-AI-Pipeline#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
