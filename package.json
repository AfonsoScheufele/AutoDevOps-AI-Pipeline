{
  "name": "autodevops-ai-pipeline",
  "version": "1.0.0",
  "description": "> **Automated DevOps pipeline powered by AI with integrated security checks for fast, secure, and reliable software delivery.**",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "coverage:strict": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageThreshold='{\"global\": {\"branches\": 80, \"functions\": 80, \"lines\": 80, \"statements\": 80}}'",
    "verify": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AfonsoScheufele/AutoDevOps-AI-Pipeline.git"
  },
